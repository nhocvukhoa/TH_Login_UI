<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/bklogin"
        android:background="@drawable/bk_login">
        //1. Header
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical">
            //1.1 Họ tên bản thân
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/username"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/username"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp">
                </ImageView>
                <TextView
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:text="HỌ VÀ TÊN: NGUYỄN VŨ ANH KHOA"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp">
                </TextView>
            </LinearLayout>
            //1.2 Mã sinh viên
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/msv"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/listsub"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp">
                </ImageView>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="MSV: 1811505310118"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp">
                </TextView>
            </LinearLayout>



        </LinearLayout>
        //2. Phần điền thông tin
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:orientation="vertical">
            //2.1 Khung chính giữa
           <LinearLayout
               android:layout_width="500dp"
               android:layout_height="390dp"
               android:orientation="vertical"
               android:layout_gravity="center"
               android:background="#FFFFFF">
               <LinearLayout
                   android:layout_width="500dp"
                   android:layout_height="80dp"
                   android:background="@drawable/loginbk">
                   <TextView
                       android:layout_width="500dp"
                       android:layout_height="80dp"
                       android:text="Login"
                       android:textStyle="bold"
                       android:fontFamily="sans-serif"
                       android:textSize="30dp"
                       android:textColor="#FFFFFF"
                       android:gravity="center">
                   </TextView>
               </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:layout_marginTop="5dp"
                  android:orientation="horizontal">

                      <EditText
                          android:layout_width="match_parent"
                          android:layout_height="100dp"
                          android:hint="Username"
                          android:textSize="25dp"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:drawableEnd="@drawable/account">
                      </EditText>
                  </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:layout_marginTop="5dp"
                   android:orientation="horizontal">
                   <EditText
                       android:layout_width="match_parent"
                       android:layout_height="100dp"
                       android:hint="Password"
                       android:textSize="25dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:drawableEnd="@drawable/pass">
                   </EditText>
               </LinearLayout>
                // Forget pass
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="60dp">
                   <TextView
                       android:layout_width="300dp"
                       android:layout_height="60dp"
                       android:text="Forgot Password"
                       android:textSize="20dp"
                       android:textColor="#3F51B5"
                       android:gravity="end"
                       android:layout_marginLeft="180dp"
                       android:paddingTop="20dp">

                   </TextView>
               </LinearLayout>
              </LinearLayout>
           </LinearLayout>
        //3. Phần checkbox và button
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
            <CheckBox
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Remember me"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginRight="50dp">
            </CheckBox>
            <Button
                android:layout_width="480dp"
                android:layout_height="85dp"
                android:background="@drawable/signinbk"
                android:text="SIGN IN"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="60dp">
            </Button>
        </LinearLayout>
        //4. Đăng nhập bằng cách khác
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="You can also sign in with social account"
                    android:textColor="#FFFFFF"
                    android:textSize="23dp"
                    android:gravity="center">
                </TextView>
                //4.2 Các social accound
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:gravity="center"
                     android:orientation="horizontal">
                        //4.2.1 Face
                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">
                            <ImageView
                                android:id="@+id/face"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/facebook">
                            </ImageView>
                        </LinearLayout>
                     //4.2.2 Gmail

                     <LinearLayout
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="12dp">
                         <ImageView
                             android:id="@+id/gmail"
                             android:layout_width="50dp"
                             android:layout_height="50dp"
                             android:layout_gravity="center"
                             android:background="@drawable/duongviengoctron"
                             android:src="@drawable/gmail">
                         </ImageView>
                     </LinearLayout>
                     //4.2.3 Twitter
                     <LinearLayout
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="12dp">
                         <ImageView
                             android:id="@+id/mail"
                             android:layout_width="50dp"
                             android:layout_height="50dp"
                             android:layout_gravity="center"
                             android:background="@drawable/duongviengoctron"
                             android:src="@drawable/twitter">
                         </ImageView>
                     </LinearLayout>
                 </LinearLayout>
            <ProgressBar
                android:layout_width="470dp"
                android:layout_height="4dp"
                android:layout_marginLeft="65dp"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp">
            </ProgressBar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:text="New member?"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_marginLeft="100dp">
                </TextView>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Sign Up"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#FFA07A"
                    android:gravity="center"
                    android:layout_marginLeft="10dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>